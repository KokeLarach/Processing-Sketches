void setup() {
  size(200,200);
}

void draw() {
  if (keyPressed) {
    if (key == 'r') {
      fill(255, 0, 0);
    } else if (key == 'g'){
      fill (color(0, 255, 0));
    } else if (key == 'b'){
      fill (color(0, 0, 255));
    }
  } else {
    fill(255);
  }
  ellipseMode(CENTER);
  ellipse(100, 100, 100, 100);
}
